<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.MainMenuController">

	<top>
		<StackPane>
			<Label text="Chicken VR Launcher"/>
		</StackPane>
	</top>

    <left>
	    <StackPane>
		    <Button fx:id="runVRButton" text="Chicken VR" onAction="#runVR"/>
	    </StackPane>
    </left>

	<center>
		<Label>
			Welcome to the Chicken VR Launcher. If you have an HTC Vive, click the "Chicken VR" button to the left. If
			you do not have an HTC Vive, click the "Chicken non-VR" button to the right. If this is your first time
			using Chicken VR, it will take some time to download the game and then the application will launch.
		</Label>
	</center>

	<right>
		<StackPane>
			<Button fx:id="runNonVRButton" text="Chicken non-VR" onAction="#runNonVR"/>
		</StackPane>
	</right>

	<bottom>
		<StackPane>
			<Button text="Quit" onAction="#quit"/>
		</StackPane>
	</bottom>
</BorderPane>
